  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View clinic dashboard",
      "url": "/dashboard",
      "icons": [{ "src": "/icons/shortcuts/dashboard.png", "sizes": "96x96" }]
    },
    {
      "name": "Appointments",
      "short_name": "Appointments",
      "description": "Manage appointments",
      "url": "/appointments",
      "icons": [{ "src": "/icons/shortcuts/appointments.png", "sizes": "96x96" }]
    },
    {
      "name": "Patients",
      "short_name": "Patients",
      "description": "View patient records",
      "url": "/patients",
      "icons": [{ "src": "/icons/shortcuts/patients.png", "sizes": "96x96" }]
    },
    {
      "name": "New Appointment",
      "short_name": "New Appt",
      "description": "Create a new appointment",
      "url": "/appointments/new",
      "icons": [{ "src": "/icons/shortcuts/new-appointment.png", "sizes": "96x96" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "iarc_rating_id": "",
  "handle_links": "auto",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "protocol_handlers": [
    {
      "protocol": "web+clinick",
      "url": "/?action=%s"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "records",
          "accept": ["application/pdf", ".pdf", "image/*"]
        }
      ]
    }
  }
}
