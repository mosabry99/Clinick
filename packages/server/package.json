{
  "name": "@clinick/server",
  "version": "1.0.0",
  "description": "Comprehensive medical clinic management system server",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec ts-node-esm src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest-e2e.config.js",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "ts-node-esm prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset --force",
    "db:backup": "ts-node-esm scripts/backup.ts",
    "db:restore": "ts-node-esm scripts/restore.ts",
    "prepare": "npm run db:generate",
    "docker:build": "docker build -t clinick-server .",
    "docker:run": "docker run -p 3000:3000 clinick-server",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "archiver": "^6.0.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "chart.js": "^4.3.0",
    "chartjs-node-canvas": "^4.1.6",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dicom-parser": "^1.8.21",
    "dotenv": "^16.3.1",
    "exceljs": "^4.3.0",
    "express": "^5.0.0-beta.1",
    "express-rate-limit": "^6.8.0",
    "express-slow-down": "^1.6.0",
    "geoip-lite": "^1.4.7",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsdom": "^22.1.0",
    "jsondiffpatch": "^0.4.1",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.1",
    "luxon": "^3.3.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.1",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.1",
    "rate-limiter-flexible": "^2.4.1",
    "response-time": "^2.3.2",
    "sharp": "^0.32.3",
    "socket.io": "^4.7.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ua-parser-js": "^1.0.35",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.2",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/geoip-lite": "^1.4.1",
    "@types/jest": "^29.5.3",
    "@types/json2csv": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/luxon": "^3.3.0",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.2",
    "@types/node-cron": "^3.0.8",
    "@types/nodemailer": "^6.4.8",
    "@types/pdfkit": "^0.12.10",
    "@types/pg": "^8.10.2",
    "@types/response-time": "^2.3.5",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/ua-parser-js": "^0.7.36",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
