{
  "name": "clinick",
  "version": "0.1.0",
  "description": "A comprehensive SaaS-based Medical Clinic Management System",
  "private": true,
  "workspaces": [
    "packages/client",
    "packages/server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --workspace=packages/client",
    "dev:server": "npm run dev --workspace=packages/server",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=packages/client",
    "build:server": "npm run build --workspace=packages/server",
    "start": "node packages/server/dist/index.js",
    "package": "npm run build && npm run package:executable",
    "package:executable": "pkg packages/server/dist/index.js --output bin/medsaas",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "pkg": "^5.8.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "medical",
    "clinic",
    "healthcare",
    "saas",
    "emr",
    "patient-management",
    "appointment-scheduling",
    "billing",
    "inventory",
    "pwa",
    "multi-tenant"
  ],
  "author": "Clinick Team",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{ts,tsx,js,jsx,json,md}": "prettier --write"
  }
}
